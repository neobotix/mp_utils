<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mp_400">

  <!--Gazebo Caster Wheel Macro-->
  <xacro:macro name="gazebo_mp_400_caster_wheel" params="wheel_prefix">

    <gazebo reference="${wheel_prefix}_link">
      <kp>10000.0</kp>
      <kd>10.0</kd>
      <mu1>0.001</mu1>
      <mu2>0.001</mu2>
    </gazebo>

  </xacro:macro>

</robot>